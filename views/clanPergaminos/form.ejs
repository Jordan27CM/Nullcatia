<%- include('../partials/header') %>
<%- include('../partials/nav') %>

<div class="container my-5" style="max-width: 600px; font-family: Georgia, serif;">
  <div class="card" style="background-color: #2e2a1f; border: 3px solid #d9c978; box-shadow: 0 0 10px #d9c978;">
    <div class="card-body text-light">

      <h1 class="card-title mb-4 display-5 text-center" style="color: #d9c978;">
        🔗 Asociar Pergamino con Clan
      </h1>

      <form action="/clanPergamino" method="POST">
        <div class="mb-4">
          <label for="clan_id" class="form-label fw-semibold" style="color: #d9c978;">🛡️ Selecciona un Clan:</label>
          <select name="clan_id" id="clan_id" required
                  class="form-select bg-secondary text-light" style="border-color: #d9c978;">
            <option value="">-- Elige un clan --</option>
            <% clanes.forEach(c => { %>
              <option value="<%= c.clan_id %>"><%= c.nombre %></option>
            <% }) %>
          </select>
        </div>

        <div class="mb-4">
          <label for="pergamino_id" class="form-label fw-semibold" style="color: #d9c978;">📜 Selecciona un Pergamino:</label>
          <select name="pergamino_id" id="pergamino_id" required
                  class="form-select bg-secondary text-light" style="border-color: #d9c978;">
            <option value="">-- Elige un pergamino --</option>
            <% pergaminos.forEach(p => { %>
              <option value="<%= p.pergamino_id %>"><%= p.titulo %></option>
            <% }) %>
          </select>
        </div>

        <div class="d-flex justify-content-between">
          <button type="submit" class="btn fw-bold"
                  style="background-color: #d9c978; color: #2e2a1f; letter-spacing: 1px;">
            ✅ Asociar
          </button>
          <a href="/clanPergamino" class="btn btn-outline-light"
             style="border-color: #d9c978; color: #d9c978; letter-spacing: 1px;">
            🔙 Volver
          </a>
        </div>
      </form>

    </div>
  </div>
</div>

<%- include('../partials/footer') %>
