<%- include('../partials/header') %>
<%- include('../partials/nav') %>

<div class="container my-5" style="max-width: 600px; font-family: Georgia, serif;">
  <div class="card" style="background-color: #2e2a1f; border: 3px solid #d9c978; box-shadow: 0 0 10px #d9c978;">
    <div class="card-body">
      <h1 class="card-title mb-4 display-5 fw-bold text-center" style="color: #d9c978;">
        Editar Clan
      </h1>

      <form action="/clanes/<%= clan.clan_id %>?_method=PUT" method="POST">
        <div class="mb-3">
          <label for="nombre" class="form-label fw-semibold" style="color: #d9c978;">Nombre del Clan:</label>
          <input type="text" id="nombre" name="nombre" value="<%= clan.nombre %>" required
                 class="form-control bg-secondary text-light" style="border-color: #d9c978;">
        </div>

        <div class="mb-3">
          <label for="territorio_id" class="form-label fw-semibold" style="color: #d9c978;">Territorio:</label>
          <select id="territorio_id" name="territorio_id" required
                  class="form-select bg-secondary text-light" style="border-color: #d9c978;">
            <% territorios.forEach(territorio => { %>
              <option value="<%= territorio.territorio_id %>" 
                <%= territorio.territorio_id === clan.territorio_id ? 'selected' : '' %>>
                <%= territorio.nombre %>
              </option>
            <% }) %>
          </select>
        </div>

        <div class="mb-4">
          <label for="descripcion" class="form-label fw-semibold" style="color: #d9c978;">Descripci√≥n:</label>
          <textarea id="descripcion" name="descripcion" rows="3"
                    class="form-control bg-secondary text-light" style="border-color: #d9c978;"><%= clan.descripcion || '' %></textarea>
        </div>

        <div class="d-flex justify-content-between">
          <button type="submit" class="btn fw-bold" style="background-color: #d9c978; color: #2e2a1f; letter-spacing: 1px;">
            Actualizar Clan
          </button>
          <a href="/clanes" class="btn btn-outline-light" style="border-color: #d9c978; color: #d9c978; letter-spacing: 1px;">
            Cancelar
          </a>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
