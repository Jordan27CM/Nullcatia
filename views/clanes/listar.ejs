<%- include('../partials/header') %>
<%- include('../partials/nav') %>

<div class="container my-5" style="max-width: 900px;">
  <div class="card" style="background-color: #2e2a1f; border: 3px solid #d9c978; box-shadow: 0 0 10px #d9c978;">
    <div class="card-body">
      <h1 class="card-title mb-4 display-4 fw-bold text-center" style="font-family: Georgia, serif; color: #d9c978;">
        Lista de Clanes
        <a href="/clanes/exportar/pdf" class="btn btn-outline-success mb-3" target="_blank">
  📄 Exportar PDF
</a>
      </h1>

      <table class="table table-hover table-striped text-light" style="border-color: #d9c978;">
        <thead style="background-color: #3b3721; color: #d9c978; border-bottom: 2px solid #d9c978;">
          <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Territorio</th>
            <th scope="col" style="min-width: 150px;">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% clanes.forEach(clan => { %>
            <tr style="border-bottom: 1px solid #d9c978;">
              <td><%= clan.nombre %></td>
              <td><%= clan.territorio %></td>
              <td>
                <a href="/clanes/<%= clan.clan_id %>" class="btn btn-sm btn-outline-warning me-1" style="letter-spacing: 1px;">🔍 Ver</a>
                <a href="/clanes/<%= clan.clan_id %>/editar" class="btn btn-sm btn-outline-warning me-1" style="letter-spacing: 1px;">✏️ Editar</a>
                <form action="/clanes/<%= clan.clan_id %>?_method=DELETE" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-sm btn-outline-danger" style="letter-spacing: 1px;">
                    🗑️ Eliminar
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
