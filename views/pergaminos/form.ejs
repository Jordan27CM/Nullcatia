<%- include('../partials/header') %>
<%- include('../partials/nav') %>

<div class="container my-5" style="max-width: 700px; font-family: Georgia, serif;">
  <div class="card" style="background-color: #2e2a1f; border: 3px solid #d9c978; box-shadow: 0 0 10px #d9c978;">
    <div class="card-body text-light">
      <h1 class="card-title mb-4 display-5 text-center" style="color: #d9c978;">
        ➕ Crear Pergamino
      </h1>

      <form action="/pergaminos" method="POST">
        <div class="mb-3">
          <label for="titulo" class="form-label fw-semibold" style="color: #d9c978;">Título:</label>
          <input type="text" id="titulo" name="titulo" required
                 class="form-control bg-secondary text-light" style="border-color: #d9c978;">
        </div>

        <div class="mb-4">
          <label for="contenido" class="form-label fw-semibold" style="color: #d9c978;">Contenido:</label>
          <textarea id="contenido" name="contenido" rows="6" required
                    class="form-control bg-secondary text-light" style="border-color: #d9c978;"></textarea>
        </div>

        <div class="d-flex justify-content-between">
          <button type="submit" class="btn fw-bold"
                  style="background-color: #d9c978; color: #2e2a1f; letter-spacing: 1px;">
            Guardar Pergamino
          </button>
          <a href="/pergaminos" class="btn btn-outline-light"
             style="border-color: #d9c978; color: #d9c978; letter-spacing: 1px;">
            Cancelar
          </a>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
